@model IEnumerable<DesarrolloWebMVC_Pelicula.Web.Models.Pelicula>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <table>
        <tr>
            <th>Codigo</th>
            <th>Titulo</th>
            <th>Director</th>
            <th>Autor Principal</th>
            <th>Actores</th>
            <th>Duracion</th>
            <th>Estreno</th>
            <th>Borrar</th>
            <th>Modificar</th>
        </tr>
        @foreach (var pelicula in Model)
        {
            <tr>
                <td>@pelicula.Codigo</td>
                <td>@pelicula.Titulo</td>
                <td>@pelicula.Director</td>
                <td>@pelicula.AutorPrincipal</td>
                <td>@pelicula.No_Actores</td>
                <td>@pelicula.Duracion</td>
                <td>@pelicula.Estreno</td>
                <td><a href="/Home/Baja?cod=@pelicula.Codigo">borra?</a></td>
                <td><a href="/Home/Modificacion?cod=@pelicula.Codigo">modifica?</a></td>
            </tr>
        }
    </table>
    <a href="/Home/Alta">Agregar</a>
</body>
</html>
